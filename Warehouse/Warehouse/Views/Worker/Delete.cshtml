@model Warehouse.Models.Worker
@{
    ViewBag.Title = "Удаление сотрудника";
}

<div>
    <h1>Удалить сотрудника №@Model.Number?</h1>
    <div>
        <form asp-controller="Worker" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>