@model Warehouse.Models.Worker
@{
    ViewData["Title"] = "Редктирование работника";
}

<h3>Форма редактирования работника</h3>
@using (Html.BeginForm("Edit", "Worker", FormMethod.Post))
{
    @Html.Hidden("ID", Model.ID)
    <p>
        @Html.LabelFor(m => m.FIO, "ФИО")
        @Html.TextBoxFor(m => m.FIO, new { @required = "required", @value = Model.FIO })
    </p>
    <p>
        @Html.LabelFor(m => m.Birthday, "Дата рождения")
        @Html.TextBoxFor(m => m.Birthday, "{0:yyyy-MM-dd}", new { type = "date", @required = "required", @value = Model.Birthday })
    </p>
    <p>
        @Html.LabelFor(m => m.Position.Name, "Должность")
        @Html.TextBoxFor(m => m.Position.Name, new { list = "positions", @required = "required", @value = Model.Position.Name })
        <datalist id="positions">
            @foreach (var position in ViewBag.Positions)
            {
                <option value="@position">@position</option>
            }
        </datalist>

    </p>
    <p>
        @Html.LabelFor(m => m.Experience, "Опыт работы")
        @Html.TextBoxFor(m => m.Experience, new { type = "number", @required = "required", maxLength = 2, @value = Model.Experience })
    </p>
    <p>
        @Html.LabelFor(m => m.Salary, "Зарплата")
        @Html.TextBoxFor(m => m.Salary, new { type = "number", @required = "required" })
    </p>
    <p>
        @Html.LabelFor(m => m.PhoneNumber, "Номер телефона")
        @Html.TextBoxFor(m => m.PhoneNumber, new { @required = "required", maxLength = 11, minlength = 11, @value = Model.PhoneNumber })
    </p>
    <p>
        @Html.LabelFor(m => m.Number, "Табельный номер")
        @Html.TextBoxFor(m => m.Number, new { type = "number", @required = "required", maxLength = 3, @value = Model.Number })
    </p>
    <p>
        @Html.LabelFor(m => m.Passport.Series, "Серия паспорта")
        @Html.TextBoxFor(m => m.Passport.Series, new { @required = "required", maxLength = 4, minlength = 4, @value = Model.Passport.Series })
    </p>
    <p>
        @Html.LabelFor(m => m.Passport.Number, "Номер паспорта")
        @Html.TextBoxFor(m => m.Passport.Number, new { @required = "required", maxLength = 6, minlength = 6, @value = Model.Passport.Number })
    </p>
    <p>
        @Html.LabelFor(m => m.Passport.IssuedAt, "Кем выдан")
        @Html.TextBoxFor(m => m.Passport.IssuedAt, new { @required = "required", @value = Model.Passport.IssuedAt })
    </p>
    <p>
        @Html.LabelFor(m => m.Passport.IssuedWas, "Когда выдан")
        @Html.TextBoxFor(m => m.Passport.IssuedWas, "{0:yyyy-MM-dd}", new { type = "date", @required = "required", @value = Model.Passport.IssuedWas })
    </p>
    <p><input type="submit" value="Изменить" /></p>
}