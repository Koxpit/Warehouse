@model Warehouse.Models.Order
@{
    ViewBag.Title = "Удаление заказа";
}

<div>
    <h1>Удалить заказ №@Model.Number?</h1>
    <div>
        <form asp-controller="Order" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>