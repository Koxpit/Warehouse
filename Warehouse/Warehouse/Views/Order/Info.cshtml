@model Warehouse.Models.Order
@{
    ViewData["Title"] = "Order Info";
}


<style type="text/css">
    TABLE {
        border: 1px solid black;
    }

    TR {
        padding: 3px;
        border: 1px solid black;
    }
</style>
<div class="text-center">
    <h1 class="col-md-12">Заказ №@Model.ID</h1>
</div>
<div class="text-left">
    <table style="width:100%;" class="col-md-12">
        <tr align="center">
            <td>Тип</td>
            <td>Плановое время</td>
            <td>Заказчик</td>
            <td>Компания</td>
            <td>Город</td>
            <td>Номер телефона заказчика</td>
            <td>Номер авто</td>
            <td>Вместимость в авто</td>
            <td>Наименование авто</td>
            <td>ФИО водителя</td>
            <td>Номер телефона водителя</td>
            <td>Опыт водителя</td>
            <td></td>
            <td></td>
        </tr>
        <tr align="center">
            <td>@Model.Type</td>
            <td>@Model.ArrivalTime</td>
            <td>@Model.Customer.FIO</td>
            <td>@Model.Customer.CompanyName</td>
            <td>@Model.Customer.City</td>
            <td>@Model.Customer.PhoneNumber</td>
            <td>@Model.Vehicle.Number</td>
            <td>@Model.Vehicle.Capacity</td>
            <td>@Model.Vehicle.Name</td>
            <td>@Model.Vehicle.Driver.FIO</td>
            <td>@Model.Vehicle.Driver.PhoneNumber</td>
            <td>@Model.Vehicle.Driver.Experience</td>
            <td>@Html.ActionLink("Изменить", "Edit", "Order", new { orderId = Model.ID })</td>
            <td>
                <form asp-controller="Order" asp-action="Delete">
                    <input type="hidden" value="@Model.ID" name="id" />
                    <input type="submit" value="Удалить" onclick="return confirm('Вы точно хотите удалить заказ №@Model.ID?');" />
                </form>
            </td>
        </tr>
    </table>
</div>
