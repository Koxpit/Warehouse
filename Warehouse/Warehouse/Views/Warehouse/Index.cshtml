@model Warehouse.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Index";
}

    <style type="text/css">
        div.productCode, div.productParty, div.storageName, div.storageTerritory {
            display: inline-block;
            margin: 20px;
        }

        h5.index-header-h5 {
            padding-left: 5px;
            padding-top: 5px;
        }

        div.search, div.edit {
            padding: 3px; /* Поля вокруг содержимого ячеек */
            border: 1px solid black; /* Рамка вокруг таблицы */
            margin-bottom: 10px;
        }
    </style>
    <div class="indexContainer">
        <div class="search">
            <form method="post">
                <h5 class="index-header-h5">Поиск по карте</h5>
                <div class="productCode">
                    <p>Код товара</p>
                    <select name="code">
                        <option value=""></option>
                        @foreach (var item in Model.Products)
                        {
                            <option value="@item.Code">@item.Code</option>
                        }
                    </select>
                </div>
                <div class="productParty">
                    <p>Партия</p>
                    <select name="party">
                        <option value=""></option>
                        @foreach (var item in Model.Products)
                        {
                            <option value="@item.Party">@item.Party</option>
                        }
                    </select>
                </div>
                <button type="submit" formaction="GetSelectedProducts">Найти</button>
                <button type="submit">Просмотр</button>
                <button type="submit">Инвентаризация</button>
            </form>
        </div>
        <div class="edit">
            <form method="post">
                <h5 class="index-header-h5">Редактировать данные</h5>
                <div class="storageName">
                    <p>Склад</p>
                    <select name="storageName">
                        @foreach (var item in Model.Storages)
                        {
                            <option value="@item.Name">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="storageTerritory">
                    <p>Территория</p>
                    <select name="territoryName">
                        @foreach (var item in Model.Storages)
                        {
                            <option value="@item.Territory">@item.Territory</option>
                        }
                    </select>
                </div>
                <button type="submit" formaction="SelectProductsInStorage">Перейти</button>
                <button type="submit" formaction="GetStorages">Список складов</button>
                <button type="submit">Загрузить со сканера</button>
            </form>
        </div>
    </div>

