@model Warehouse.Models.Place
@{
    ViewData["Title"] = "Добавление";
}

<h3>Форма добавления продукта</h3>
@using (Html.BeginForm("Add", "Product", FormMethod.Post))
{
    <p>
        @Html.LabelFor(m => m.Storage.Name, "Наименование склада")
        @Html.TextBoxFor(m => m.Storage.Name, new { list = "namesStorages", @required = "required" })
        <datalist id="namesStorages">
            @foreach (var name in ViewBag.StorageNames)
            {
                <option value="@name">@name</option>
            }
        </datalist>
    </p>
    <p>
        @Html.LabelFor(m => m.Storage.Name, "Территория склада")
        @Html.TextBoxFor(m => m.Storage.Territory, new { list = "territoriesStorages", @required = "required" })
        <datalist id="territoriesStorages">
            @foreach (var territory in ViewBag.StorageTerritories)
            {
                <option value="@territory">@territory</option>
            }
        </datalist>
    </p>
    <p>
        @Html.LabelFor(m => m.Sector, "Сектор")
        @Html.TextBoxFor(m => m.Sector, new { @required = "required" })
    </p>
    <p>
        @Html.LabelFor(m => m.Number, "Ряд")
        @Html.TextBoxFor(m => m.Number, new { @required = "required" })
    </p>
    <p>
        @Html.LabelFor(m => m.Product.Name, "Наименование продукции")
        @Html.TextBoxFor(m => m.Product.Name, new { @required = "required" })
    </p>
    <p>
        @Html.LabelFor(m => m.Product.Code, "Код продукта")
        @Html.TextBoxFor(m => m.Product.Code, new { list = "codeProducts", @required = "required" })
        <datalist id="codeProducts">
            @foreach (var code in ViewBag.Codes)
            {
                <option value="@code">@code</option>
            }
        </datalist>
    </p>
    <p>
        @Html.LabelFor(m => m.Product.BoxesInPallete, "Кол-во коробов в паллете")
        @Html.TextBoxFor(m => m.Product.BoxesInPallete)
    </p>
    <p>
        @Html.LabelFor(m => m.Product.Party, "Партия")
        @Html.TextBoxFor(m => m.Product.Party)
    </p>
    <p>
        @Html.LabelFor(m => m.Product.Term, "Срок")
        @Html.TextBoxFor(m => m.Product.Term, "", new { type = "date", @required = "required" })
    </p>
    <p>
        @Html.LabelFor(m => m.Product.Comment, "Примечания")
        @Html.TextBoxFor(m => m.Product.Comment)
    </p>
    <p>
        @Html.LabelFor(m => m.NumOfPalletes, "Кол-во паллет")
        @Html.TextBoxFor(m => m.NumOfPalletes, new { @required = "required" })
    </p>
    <p>
        @Html.LabelFor(m => m.Product.Cost, "Стоимость паллеты")
        @Html.TextBoxFor(m => m.Product.Cost, new { @required = "required" })
    </p>
    <p><input type="submit" value="Добавить" /></p>
}

