@model Warehouse.Models.Position
@{
    ViewBag.Title = "Удаление должности";
}

<div>
    <h1>Удалить должность "@Model.Name"?</h1>
    <div>
        <form asp-controller="Position" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>